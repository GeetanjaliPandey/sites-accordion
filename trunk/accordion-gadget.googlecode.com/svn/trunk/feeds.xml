<?xmlversion="1.0" encoding="UTF-8"?>
<Module>
<ModulePrefs 
  title="__UP_myname__" 
  height="400"
  width="240"
  author="Jeff Davis"
  author_email="jwdavis@google.com"
  description="test of Google AJAX feed stuff" />
<UserPref 
    name="myname" 
    display_name="Name" 
    required="true" />
<UserPref 
    name="mytitle" 
    display_name="Title" 
    required="true" />
<UserPref 
    name="feedname" 
    display_name="FeedName" 
    required="true" />
<UserPref 
    name="feedurl" 
    display_name="FeedURL" 
    required="true" />
<Content type="html"><![CDATA[
  <div id="feed-control">
    <span style="color:#676767;font-size:11px;margin:10px;padding:4px;">Loading stuff...</span>
  </div>
  
  <script src="http://www.google.com/jsapi?key=notsupplied-wizard"
    type="text/javascript"></script>

  <!-- Dynamic Feed Control and Stylesheet -->
  <script src="http://www.google.com/uds/solutions/dynamicfeed/gfdynamicfeedcontrol.js"
    type="text/javascript">
  </script>
  <style type="text/css">
.gfg-root {
  width : 99% !important;
}

.gfg-subtitle {
  text-indent: 5px !important;
}

.gfg-subtitle a {
  color : #3366cc;
}

.gfg-listentry {
  white-space : normal !important;
}

.gfg-root .gfg-entry .gf-result .gf-title {
  white-space : normal !important;
}

  </style>
  <style type="text/css">
    @import url("http://www.google.com/uds/solutions/dynamicfeed/gfdynamicfeedcontrol.css");
  </style>

  <script type="text/javascript">
    function LoadDynamicFeedControl() {
    var prefs = new gadgets.Prefs();

      var feeds = [
        {title: prefs.getString("feedname"),
	 url: prefs.getString("feedurl")
	}];
      var options = {
        stacked : true,
        horizontal : false,
        title : prefs.getString("mytitle")
      };

      new GFdynamicFeedControl(feeds, 'feed-control', options);
    }
    // Load the feeds API and set the onload callback.
    google.load('feeds', '1');
    google.setOnLoadCallback(LoadDynamicFeedControl);
  </script>
<!-- ++End Dynamic Feed Control Wizard Generated Code++ -->
                
]]></Content>
</Module>